node{
	
	environment{
		PATH = "C:\Program Files (x86)\Jenkins\tools\hudson.tasks.Maven_MavenInstallation\maven_3.6.3/bin:$PATH"
	}

   stage('SCM Checkout'){
     git 'https://github.com/kaustubh0228/GridJenkinsEx.git'
   }
   stage('Compile-Package'){
      // Get maven home path  
      sh "mvn package"
   }
   
   stage('SonarQube Analysis') {
        withSonarQubeEnv('Sonar') { 
          sh "sonar:sonar"
        }
    }
   
   stage('Email Notification'){
      mail bcc: '', body: '''Hi Welcome to jenkins email alerts
      Thanks
      Kaustubh''', cc: '', from: '', replyTo: '', subject: 'Jenkins Job', to: 'kaustubh.aras@gmail.com'
   }
   stage('Slack Notification'){
       slackSend baseUrl: 'https://hooks.slack.com/services/',
       channel: '#jenkins-pipeline-demo',
       color: 'good', 
       message: 'Welcome to Jenkins, Slack!', 
       teamDomain: 'javahomecloud',
       tokenCredentialId: 'slack-demo'
   }

}